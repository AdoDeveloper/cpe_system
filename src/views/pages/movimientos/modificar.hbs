<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Modificar Movimiento</h1>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-6">

      {{!-- Formulario para modificar movimiento --}} 
      <form method="POST" action="/movimientos/edit/{{movimiento.id}}?_method=PUT" id="alertFormEdit" class="bg-white p-4 rounded shadow-sm">
        
        <div class="form-group">
          <label for="tipocc">Tipo de Cuenta Contable</label>
          <select class="form-control" id="tipocc" name="tipocc" required>
            <option value="" disabled>Seleccione el tipo de cuenta</option>
            {{#each cuentasContables}}
              <option value="{{this.tipocc}}" {{#if (eq movimiento.tipocc this.tipocc)}}selected{{/if}}>{{this.nombre_cuenta}}</option>
            {{/each}}
          </select>
        </div>
        
        <div class="form-group">
          <label for="anio">Año</label>
          <input type="number" class="form-control" id="anio" name="anio" placeholder="Año" value="{{movimiento.anio}}" required>
        </div>
        
        <div class="form-group">
          <label for="mes">Mes</label>
          <input type="number" class="form-control" id="mes" name="mes" placeholder="Mes" min="1" max="12" value="{{movimiento.mes}}" required>
        </div>
        
        <div class="form-group">
          <label for="monto">Monto</label>
          <input type="number" step="0.01" class="form-control" id="monto" name="monto" placeholder="Monto" value="{{movimiento.monto}}" required>
        </div>
        
        <div class="form-group">
          <label for="concepto">Concepto</label>
          <textarea class="form-control" id="concepto" name="concepto" placeholder="Descripción del movimiento" required>{{movimiento.concepto}}</textarea>
        </div>

        <div class="form-group">
          <label for="clienteId">Cliente (Opcional)</label>
          <input type="number" class="form-control" id="clienteId" name="clienteId" placeholder="ID del Cliente" value="{{movimiento.clienteId}}">
        </div>
        
        <div class="form-group">
          <label for="facturaId">Factura (Opcional)</label>
          <input type="number" class="form-control" id="facturaId" name="facturaId" placeholder="ID de la Factura" value="{{movimiento.facturaId}}">
        </div>
        
        <div class="form-group row">
          <div class="col-6 pl-1">
            <a href="/movimientos" class="btn btn-secondary btn-block">Cancelar</a>
          </div>
          <div class="col-6 pr-1">
            <button class="btn btn-primary btn-block" type="submit">Guardar Cambios</button>
          </div>
        </div>
        
      </form>
    </div>
  </div>
</div>

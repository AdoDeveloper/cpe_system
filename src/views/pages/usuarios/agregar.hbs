<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Agregar Nuevo Usuario</h1>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      {{#if errors}}
        <div class="alert alert-danger">
          <ul>
            {{#each errors}}
              <li>{{this.msg}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

      {{!-- Formulario para agregar nuevo usuario --}}
      <form method="POST" action="/usuarios/new" id="agregarUsuarioForm">
        <label for="email">Correo electrónico</label>
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="example@airlink.com.sv" required autofocus>
        </div>

        <label for="password">Contraseña</label>
        <div class="form-group">
          <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
        </div>
        
        <label for="nombre">Nombre</label>
        <div class="form-group">
          <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
        </div>

        <div class="form-group">
          <label for="rolId">Rol</label>
          <select class="form-control" name="rolId" id="rolSelect" required>
            <option value="" disabled selected>Seleccione un rol</option>
            {{#each roles}}
              <option value="{{this.id}}">{{this.nombre}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group" id="clienteSelectGroup" style="display:none;">
          <label for="clienteId">Asignar Cliente</label>
          <select class="form-control" name="clienteId">
            <option value="" disabled selected>Seleccione un cliente</option>
            {{#each clientes}}
              <option value="{{this.id}}">{{this.nombres}} {{this.apellidos}}</option>
            {{/each}}
          </select>
        </div>
        
        <div class="form-group text-center mt-4">
          <button class="btn btn-primary" type="submit">Guardar Cambios</button>
          <a href="/usuarios" class="btn btn-secondary ml-2">Cancelar</a> <!-- Botón para cancelar -->
        </div>

      </form>

      <!-- Spinner de carga, oculto inicialmente -->
      <div id="loadingSpinner" class="text-center mt-4" style="display: none;">
        <div class="spinner-border" role="status">
          <span class="sr-only">Cargando...</span>
        </div>
        <p>Procesando solicitud...</p>
      </div>
    </div>
  </div>
</div>

<script>
  // Mostrar el selector de cliente solo si el rol no es Admin
  document.getElementById('rolSelect').addEventListener('change', function() {
    const selectedRole = this.options[this.selectedIndex].text;
    const clienteSelectGroup = document.getElementById('clienteSelectGroup');
    
    if (selectedRole === 'Administrador') {
      clienteSelectGroup.style.display = 'none'; // Ocultar el campo cliente si es Admin
    } else {
      clienteSelectGroup.style.display = 'block'; // Mostrar el campo cliente si no es Admin
    }
  });

  // Mostrar el spinner al enviar el formulario
  document.getElementById('agregarUsuarioForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevenir el envío del formulario
    Swal.fire({
      title: 'Guardando...',
      text: 'Por favor, espera mientras se procesa tu solicitud.',
      allowOutsideClick: false,
      didOpen: () => {
        Swal.showLoading();
      }
    });

    // Enviar el formulario después de mostrar el spinner
    this.submit();
  });
</script>
<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12 col-md-6">
            <h3>Listado de Configuraciones CPE</h3>
        </div>
        <div class="col-12 col-md-6 text-md-right text-center">
            <a href="/configuraciones/new" class="btn btn-success mb-2">
                <i class="fas fa-plus"></i> Agregar Configuración CPE
            </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>No. Configuración</th>
                            <th>CLIENTE</th>
                            <th>DIRECCIÓN IP</th>
                            <th>ANTENA CPE</th>
                            <th>ROUTER CPE</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each configuraciones}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{cliente.alias}} - {{cliente.nombres}} {{cliente.apellidos}}</td>
                                <td>{{ip_antena}}</td>
                                <td>{{cpe_antena.nombre_equipo}}</td>
                                <td>{{cpe_router.nombre_equipo}}</td>
                                <td>
                                    <a href="/configuraciones/edit/{{id}}" class="btn btn-primary btn-sm" title="Modificar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form id="deleteForm-{{id}}" method="POST" action="/configuraciones/delete/{{id}}?_method=DELETE" style="display:inline;">
                                        <button type="button" class="btn btn-danger btn-sm" title="Eliminar" onclick="confirmDeleteConfiguracion('{{id}}', '{{cliente.alias}}')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/plugins/sweetalert2/sweetalert2.all.min.js"></script>
<script>
  function confirmDeleteConfiguracion(id, clienteAlias) {
    Swal.fire({
      title: '¿Estás seguro?',
      text: `Estás a punto de eliminar la configuración CPE del cliente: ${clienteAlias}. Esta acción no se puede deshacer.`,
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Sí, eliminar',
      cancelButtonText: 'Cancelar'
    }).then((result) => {
      if (result.isConfirmed) {
        // Enviar el formulario de eliminación
        document.getElementById(`deleteForm-${id}`).submit();
      }
    });
  }
</script>

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12 col-md-6">
            <h3>Listado de Servicios</h3>
        </div>
        <div class="col-12 col-md-6 text-md-right text-center">
            <a href="/servicios/new" class="btn btn-success mb-2">Agregar Servicio</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>No. Servicio</th>
                            <th>NOMBRE</th>
                            <th>PRECIO</th>
                            <th>DESCRIPCIÃ“N</th>
                            <th>TIPO DE PAGO</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each servicios}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{servicio}}</td>
                                <td>${{precio}}</td>
                                <td>{{descripcion}}</td>
                                <td>{{tipo_pago}}</td>
                                <td>
                                    <a href="/servicios/edit/{{id}}" class="btn btn-primary btn-sm" title="Modificar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/servicios/delete/{{id}}" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Agregar Nuevo Servicio</h1>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      
      {{!-- Mostrar errores si existen --}}
      {{#if errors}}
        <div class="alert alert-danger">
          <ul>
            {{#each errors}}
              <li>{{this.msg}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

      {{!-- Formulario para agregar nuevo servicio --}}
      <form method="POST" action="/servicios/new" id="agregarServicioForm">
        
        <div class="form-group">
          <input type="text" class="form-control" name="servicio" placeholder="Nombre del Servicio" value="" required autofocus>
        </div>
        
        <div class="form-group">
          <input type="number" step="0.01" class="form-control" name="precio" placeholder="Precio" value="" required>
        </div>
        
        <div class="form-group">
          <textarea class="form-control" name="descripcion" placeholder="Descripción del Servicio" required></textarea>
        </div>
        
        <div class="form-group">
          <select class="form-control" name="tipo_pago" required>
            <option value="" disabled selected>Seleccione el tipo de pago</option>
            <option value="Mensual">Mensual</option>
            <option value="Anual">Anual</option>
          </select>
        </div>
        
        <div class="form-group text-center mt-4">
          <button class="btn btn-primary" type="submit">Guardar Cambios</button>
          <a href="/servicios" class="btn btn-secondary ml-2">Cancelar</a> <!-- Botón para cancelar -->
        </div>
        
      </form>
    </div>
  </div>
</div>

<script>
  // Mostrar el spinner al enviar el formulario
  document.getElementById('agregarServicioForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevenir el envío del formulario
    Swal.fire({
      title: 'Guardando...',
      text: 'Por favor, espera mientras se procesa tu solicitud.',
      allowOutsideClick: false,
      didOpen: () => {
        Swal.showLoading();
      }
    });

    // Enviar el formulario después de mostrar el spinner
    this.submit();
  });
</script>

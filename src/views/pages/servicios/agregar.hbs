{{!-- src\views\pages\servicios\agregar.hbs --}}

<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Agregar Nuevo Servicio</h1>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      
      {{!-- Mostrar errores si existen --}}
      {{#if errors}}
        <div class="alert alert-danger">
          <ul>
            {{#each errors}}
              <li>{{this.msg}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

      {{!-- Formulario para agregar nuevo servicio --}}
      <form method="POST" action="/servicios/new">
        
        <div class="form-group">
          <input type="text" class="form-control" name="servicio" placeholder="Nombre del Servicio" value="" required autofocus>
        </div>
        
        <div class="form-group">
          <input type="number" step="0.01" class="form-control" name="precio" placeholder="Precio" value="" required>
        </div>
        
        <div class="form-group">
          <textarea class="form-control" name="descripcion" placeholder="DescripciÃ³n del Servicio" required></textarea>
        </div>
        
        <div class="form-group">
          <select class="form-control" name="tipo_pago" required>
            <option value="" disabled selected>Seleccione el tipo de pago</option>
            <option value="Mensual" {{#eq tipo_pago 'Mensual'}}selected{{/eq}}>Mensual</option>
            <option value="Anual" {{#eq tipo_pago 'Anual'}}selected{{/eq}}>Anual</option>
          </select>
        </div>
        
        <div class="form-group">
          <button class="btn btn-success btn-block">Agregar Servicio</button>
        </div>
        
      </form>
    </div>
  </div>
</div>

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12 col-md-6">
            <h3>Listado de Contratos</h3>
        </div>
        <div class="col-12 col-md-6 text-md-right text-center">
            <a href="/contratos/new" class="btn btn-success mb-2"><i class="fas fa-plus"></i> Agregar Contrato</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ANEXO</th>
                            <th>FECHA DE CONTRATO</th>
                            <th>SERVICIO ADQUIRIDO</th>
                            <th>PRECIO DEL SERVICIO</th>
                            <th>ALIAS</th>
                            <th>A NOMBRE DE</th>
                            <th>TELEFONO</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each contratos}}
                            <tr>
                                <td>{{this.anexo}}</td>
                                <td>{{formatDate this.fecha_contrato}}</td>
                                <td>
                                    {{#each this.servicios}}
                                        {{this.servicio.servicio}}<br>
                                    {{/each}}
                                </td>
                                <td>
                                    {{#each this.servicios}}
                                        ${{this.servicio.precio}}<br>
                                    {{/each}}
                                </td>
                                <td>{{this.cliente.alias}}</td>
                                <td>{{this.cliente.nombres}} {{this.cliente.apellidos}}</td>
                                <td>{{this.cliente.telefono}}</td>
                                <td>
                                    <a href="/contratos/edit/{{id}}" class="btn btn-primary btn-sm" title="Modificar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form id="deleteForm-{{id}}" method="POST" action="/contratos/delete/{{this.id}}?_method=DELETE" style="display:inline;">
                                        <button type="button" class="btn btn-danger btn-sm" title="Eliminar" onclick="confirmDeleteContrato('{{id}}', '{{this.cliente.nombres}} {{this.cliente.apellidos}}')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                    <!-- Botón para generar el PDF -->
                                    <button type="button" class="btn btn-warning btn-sm" title="Generar Contrato" onclick="confirmGeneratePDF('{{id}}')">
                                        <i class="fas fa-file-pdf btn-danger"></i>
                                    </button>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/plugins/sweetalert2/sweetalert2.all.min.js"></script>
<script>
  // Confirmación para eliminar un contrato
  function confirmDeleteContrato(id, nombreCompleto) {
    Swal.fire({
      title: '¿Estás seguro?',
      text: `Estás a punto de eliminar el contrato a nombre de: ${nombreCompleto}. Esta acción no se puede deshacer.`,
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Sí, eliminar',
      cancelButtonText: 'Cancelar'
    }).then((result) => {
      if (result.isConfirmed) {
        document.getElementById(`deleteForm-${id}`).submit();
      }
    });
  }

  // Confirmación para generar el PDF del contrato
  function confirmGeneratePDF(id) {
    Swal.fire({
      title: '¿Deseas generar el contrato?',
      text: "Se generará un PDF con la información del contrato.",
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Sí, generar',
      cancelButtonText: 'Cancelar'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = `/contratos/pdf/${id}`;
      }
    });
  }
</script>

<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar Nuevo Contrato</h1>
    </div>
  
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
        
            {{#if errors}}
                <div class="alert alert-danger">
                    <ul>
                        {{#each errors}}
                            <li>{{this.msg}}</li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}

            <form method="POST" action="/contratos/new" id="alertFormSave">
                <div class="form-group">
                    <label for="clienteId">Cliente</label>
                    <select class="form-control" name="clienteId" required>
                        <option value="" disabled selected>Seleccione un cliente</option>
                        {{#each clientes}}
                            <option value="{{this.id}}">{{this.nombres}} {{this.apellidos}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="servicios">Seleccione los Servicios</label>
                    <div class="form-check">
                        {{#each servicios}}
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="servicioIds" value="{{this.id}}" id="servicio-{{this.id}}">
                                <label class="form-check-label" for="servicio-{{this.id}}">
                                    {{this.servicio}} - ${{this.precio}} ({{this.tipo_pago}})
                                </label>
                            </div>
                        {{/each}}
                    </div>
                </div>

                <div class="form-group">
                    <label for="anexo">Anexo</label>
                    <input type="text" class="form-control" name="anexo" placeholder="Anexo" required>
                </div>

                <div class="form-group">
                    <label for="fecha_contrato">Fecha de Contrato</label>
                    <input type="datetime-local" class="form-control" name="fecha_contrato" required>
                </div>

                <div class="form-group">
                    <label for="estado">Estado</label>
                    <select class="form-control" name="activo" required>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                
                <div class="form-group row">
                    <div class="col-6 pl-1">
                        <a href="/contratos" class="btn btn-secondary btn-block">Cancelar</a>
                    </div>
                    <div class="col-6 pr-1">
                        <button class="btn btn-success btn-block" type="submit">Agregar Contrato</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

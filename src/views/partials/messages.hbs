<!-- Incluir CSS de SweetAlert2 -->
<link rel="stylesheet" href="/plugins/sweetalert2/sweetalert2.min.css">

<script src="/plugins/sweetalert2/sweetalert2.all.js"></script>

<script>
  {{#if success_msg}}
  Swal.fire({
    icon: 'success',
    title: '¡Éxito!',
    text: '{{success_msg}}',
    showConfirmButton: false,
    timer: 3000,
    timerProgressBar: true,
    toast: true,
    position: 'top-end'
  });
  {{/if}}

  {{#if error_msg}}
  Swal.fire({
    icon: 'error',
    title: '¡Error!',
    text: '{{error_msg}}',
    showConfirmButton: false,
    timer: 3000,
    timerProgressBar: true,
    toast: true,
    position: 'top-end'
  });
  {{/if}}
</script>
